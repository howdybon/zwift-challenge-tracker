@page "/monthlywinners"
@using Zwift_Challenge.Data
@inject ZwiftChallengeService _zwiftChallengeService

<div style="display:grid; grid-template-columns: 200px; grid-row-gap: 10px; border: 5px solid black; padding: 10px;">
    @foreach (var winner in ContestWinners)
    {
        <MonthlyWinnerInstance Winner="winner"></MonthlyWinnerInstance>
    }
</div>

@code {

    private List<ContestWinner> ContestWinners;

    private string winner;
    protected override async Task OnInitializedAsync()
    {
        winner = await _zwiftChallengeService.GetWinner();
        ContestWinners = await _zwiftChallengeService.GetContestsWinners();
    }
}


